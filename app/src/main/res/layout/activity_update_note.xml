<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E33E86"
    tools:context=".UpdateNoteActivity">


<TextView
    android:id="@+id/editNoteHeading"
    android:layout_width="242dp"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="24dp"
    android:fontFamily="@font/paytone_one"

    android:text=" Edit Task"
    android:textColor="@color/white"
    android:textSize="24dp" />


    <ImageView
        android:id="@+id/updatesaveButton"
        android:layout_width="59dp"
        android:layout_height="44dp"
        android:layout_alignTop="@id/editNoteHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/baseline_done_24" />

    <EditText
    android:id="@+id/updatetitleEditText"
    android:layout_width="384dp"
    android:layout_height="79dp"
    android:layout_below="@id/editNoteHeading"
    android:layout_marginTop="17dp"
    android:background="@drawable/pink_boder"
    android:fontFamily="@font/paytone_one"
    android:textColorHint="#F8E0E8"
    android:hint="Enter the title"
    android:padding="12dp"
    android:textSize="20sp" />

<EditText
    android:id="@+id/updatecontentEditText"
    android:layout_width="395dp"
    android:layout_height="209dp"
    android:layout_below="@id/updatetitleEditText"
    android:layout_marginTop="6dp"
    android:fontFamily="@font/paytone_one"
    android:gravity="top"
    android:hint="Enter the describtion"
    android:padding="12dp"
    android:textColorHint="#F8E0E8"
    android:textSize="18sp"
    android:background="@drawable/pink_boder"/>




</RelativeLayout>